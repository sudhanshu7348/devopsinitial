apiVersion: v1
kind: Service
metadata:
  name: {{ include "odp-daas-indexer-chart.fullname" . }}
  labels:
    app.kubernetes.io/name: {{ include "odp-daas-indexer-chart.name" . }}
    helm.sh/chart: {{ include "odp-daas-indexer-chart.chart" . }}
    app.kubernetes.io/instance: {{ .Release.Name }}
    app.kubernetes.io/managed-by: {{ .Release.Service }}
spec:
  type: {{ .Values.service.type }}
  ports:
    - port: {{ .Values.service.port }}
      targetPort: {{ .Values.service.targetPort }}
      protocol: TCP
      name: http
  selector:
    app.kubernetes.io/name: {{ include "odp-daas-indexer-chart.name" . }}
    app.kubernetes.io/instance: {{ .Release.Name }}
